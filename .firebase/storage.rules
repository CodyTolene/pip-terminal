rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable profile images
    match /accounts/{uid}/images/{allPaths=**} {
      // Public avatars
      allow read: if true;

      // Only the owner can update
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
