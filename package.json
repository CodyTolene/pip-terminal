{
  "name": "pip-terminal",
  "description": "A special terminal for giving you a bit more control over your Pip-Boy 3000 Mk V!",
  "version": "3.22.0",
  "author": "Cody Tolene <codyatolene@gmail.com>",
  "homepage": "https://pip-boy.com/",
  "private": true,
  "engines": {
    "node": ">=20.19.0 <23"
  },
  "scripts": {
    "angular-version": "ng --version",
    "cypress:open": "cypress open",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "deploy:api": "npm run deploy --prefix api",
    "generate:apps": "ts-node --project .scripts/tsconfig.json .scripts/generate-apps.ts",
    "generate:icons": "ts-node --project .scripts/tsconfig.json .scripts/get-mat-icons.ts",
    "generate:sitemap": "ts-node --project .scripts/tsconfig.json .scripts/generate-sitemap.ts",
    "lint": "ng lint",
    "ng": "ng",
    "postinstall": "is-ci || husky install && patch-package && cd api && npm install && cd ..",
    "prebuild": "npm run update:version",
    "prepare": "husky install",
    "prestart": "npm run update:version",
    "prettier": "prettier --write . && npm run prettier --write --prefix api",
    "prettier:check": "prettier --check .",
    "start": "ng serve --open --host localhost --port 4200 --hmr=false",
    "start:api": "npm run serve --prefix api",
    "start:ci": "ng serve --host 0.0.0.0 --port 4200 --hmr=false",
    "start:hmr": "ng serve --open --host pip-boy.local --port 4200 --hmr=true",
    "start:https": "ng serve --open --host pip-boy.local --port 4200 --hmr=false --ssl --ssl-cert ssl/pip-boy.local.crt --ssl-key ssl/pip-boy.local.key",
    "start:https:hmr": "ng serve --open --host pip-boy.local --port 4200 --hmr=true --ssl --ssl-cert ssl/pip-boy.local.crt --ssl-key ssl/pip-boy.local.key",
    "start:prod": "ng serve --configuration production --open",
    "test": "ng test",
    "test:silent": "ng test --watch=false",
    "update:angular:run": "ng update",
    "update:packages:check": "ncu",
    "update:packages:run": "ncu -u",
    "update:version": "ts-node --project .scripts/tsconfig.json .scripts/update-version.ts",
    "watch": "ng build --watch --configuration development"
  },
  "dependencies": {
    "@angular/animations": "^21.0.3",
    "@angular/cdk": "^21.0.2",
    "@angular/common": "^21.0.3",
    "@angular/compiler": "^21.0.3",
    "@angular/core": "^21.0.3",
    "@angular/fire": "^21.0.0-rc.0",
    "@angular/forms": "^21.0.3",
    "@angular/google-maps": "^21.0.2",
    "@angular/material": "^21.0.2",
    "@angular/material-luxon-adapter": "^21.0.2",
    "@angular/platform-browser": "^21.0.3",
    "@angular/platform-browser-dynamic": "^21.0.3",
    "@angular/router": "^21.0.3",
    "@angular/service-worker": "^21.0.3",
    "@espruino-tools/uart": "^1.7.10",
    "@ngneat/until-destroy": "^10.0.0",
    "@proangular/pro-form": "^21.0.0",
    "@proangular/pro-table": "^21.0.0",
    "dompurify": "^3.2.7",
    "io-ts": "^2.2.22",
    "jszip": "^3.10.1",
    "luxon": "^3.7.1",
    "marked": "^16.3.0",
    "ngx-image-cropper": "^9.1.5",
    "ngx-quill": "^30.0.1",
    "quill": "^2.0.3",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.3",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jasmine": "~5.1.8",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.3.0",
    "angular-eslint": "20.6.0",
    "axios": "^1.12.2",
    "cypress": "^15.1.0",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-check-updates": "^19.1.2",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.39.1"
  }
}
